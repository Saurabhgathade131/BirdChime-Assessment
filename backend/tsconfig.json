{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
